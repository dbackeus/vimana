<div class="container" style="height: 50vh">
  <%= render AlertComponent.new(type: "success", content: notice) if notice %>
  <%= render AlertComponent.new(type: "danger", content: alert) if alert %>

  <div class="row h-100 justify-content-md-center">
    <div class="col-sm-6 my-auto">
      <div class="card">
        <div class="card-body">
          <h1>Sign in</h1>

          <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path(state: Base64.encode64(user_google_oauth2_omniauth_callback_url)), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="horizon"></div>
